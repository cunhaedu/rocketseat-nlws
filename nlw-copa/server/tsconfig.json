{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "diagnostics": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
}
